<?xml version="1.0" encoding="UTF-8"?>
<project name="module_papersoccer" default="compile.module.papersoccer">
  <dirname property="module.papersoccer.basedir" file="${ant.file.module_papersoccer}"/>
  
  <property name="module.jdk.home.papersoccer" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.papersoccer" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.papersoccer" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.papersoccer" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="papersoccer.output.dir" value="${module.papersoccer.basedir}/out/production/PaperSoccer"/>
  <property name="papersoccer.testoutput.dir" value="${module.papersoccer.basedir}/out/test/PaperSoccer"/>
  
  <path id="papersoccer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="papersoccer.module.production.classpath">
    <path refid="${module.jdk.classpath.papersoccer}"/>
  </path>
  
  <path id="papersoccer.runtime.production.module.classpath">
    <pathelement location="${papersoccer.output.dir}"/>
  </path>
  
  <path id="papersoccer.module.classpath">
    <path refid="${module.jdk.classpath.papersoccer}"/>
    <pathelement location="${papersoccer.output.dir}"/>
  </path>
  
  <path id="papersoccer.runtime.module.classpath">
    <pathelement location="${papersoccer.testoutput.dir}"/>
    <pathelement location="${papersoccer.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.papersoccer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.papersoccer">
    <patternset refid="excluded.from.module.papersoccer"/>
  </patternset>
  
  <path id="papersoccer.module.sourcepath">
    <dirset dir="${module.papersoccer.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.papersoccer" depends="compile.module.papersoccer.production,compile.module.papersoccer.tests" description="Compile module PaperSoccer"/>
  
  <target name="compile.module.papersoccer.production" depends="register.custom.compilers" description="Compile module PaperSoccer; production classes">
    <mkdir dir="${papersoccer.output.dir}"/>
    <javac2 destdir="${papersoccer.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.papersoccer}/javac">
      <compilerarg line="${compiler.args.papersoccer}"/>
      <bootclasspath refid="papersoccer.module.bootclasspath"/>
      <classpath refid="papersoccer.module.production.classpath"/>
      <src refid="papersoccer.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.papersoccer"/>
    </javac2>
    
    <copy todir="${papersoccer.output.dir}">
      <fileset dir="${module.papersoccer.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.papersoccer.tests" depends="register.custom.compilers,compile.module.papersoccer.production" description="compile module PaperSoccer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.papersoccer" description="cleanup module">
    <delete dir="${papersoccer.output.dir}"/>
    <delete dir="${papersoccer.testoutput.dir}"/>
  </target>
</project>